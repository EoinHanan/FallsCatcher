<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/customborder">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Injury suffered as a result of fall"
        android:textColor="@color/colorWriting"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/colorWriting">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWriting"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:text="Bruises"
            tools:padding="6dp"
            android:textColor="@color/colorWriting"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:text="Cuts/Scrapes"
            tools:padding="6dp"
            android:textColor="@color/colorWriting"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="3"
            android:text="Sprain/Strain"
            tools:padding="6dp"
            android:textColor="@color/colorWriting"/>

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="4"
            android:text="Dislocation"
            android:textColor="@color/colorWriting"/>

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="5"
            android:text="Broken Bone"
            android:textColor="@color/colorWriting"/>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="0"
            android:text="Head"
            tools:padding="6dp"
            android:textColor="@color/colorWriting"/>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="0"
            android:text="Body"
            tools:padding="6dp"
            android:textColor="@color/colorWriting"/>

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_row="0"
            android:text="Arms"
            tools:padding="6dp"
            android:textColor="@color/colorWriting"/>

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="4"
            android:layout_row="0"
            android:text="Legs"
            tools:padding="6dp"
            android:textColor="@color/colorWriting"/>


        <RadioButton
            android:id="@+id/headBruisesButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="1"
            android:gravity="center" />

        <RadioButton
            android:id="@+id/headCutScrapeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="2"
            android:gravity="center" />

        <RadioButton
            android:id="@+id/headSprainButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="3"
            android:gravity="center"
            tools:layout_editor_absoluteX="186dp"
            tools:layout_editor_absoluteY="0dp" />

        <RadioButton
            android:id="@+id/headDislocationButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="4"
            android:gravity="center" />

        <RadioButton
            android:id="@+id/headBrokenBoneButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="5"
            android:gravity="center"
            tools:layout_editor_absoluteX="186dp"
            tools:layout_editor_absoluteY="0dp" />

        <RadioButton
            android:id="@+id/bodyBruisesButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="1"
            android:gravity="center" />

        <RadioButton
            android:id="@+id/bodyCutScrapeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="2"
            android:gravity="center" />

        <RadioButton
            android:id="@+id/bodySprainButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="3"
            android:gravity="center"
            tools:layout_editor_absoluteX="186dp"
            tools:layout_editor_absoluteY="0dp" />

        <RadioButton
            android:id="@+id/bodyDislocationButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="4"
            android:gravity="center" />

        <RadioButton
            android:id="@+id/bodyBrokenBoneButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="5"
            android:gravity="center"
            tools:layout_editor_absoluteX="186dp"
            tools:layout_editor_absoluteY="0dp" />

        <RadioButton
            android:id="@+id/armsBruisesButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_row="1"
            android:gravity="center"
            tools:layout_editor_absoluteX="186dp"
            tools:layout_editor_absoluteY="0dp" />

        <RadioButton
            android:id="@+id/armsCutScrapesButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_row="2"
            android:gravity="center" />

        <RadioButton
            android:id="@+id/armsSprainButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_row="3"
            android:gravity="center"
            tools:layout_editor_absoluteX="186dp"
            tools:layout_editor_absoluteY="0dp" />

        <RadioButton
            android:id="@+id/armsDislocationButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_row="4"
            android:gravity="center" />

        <RadioButton
            android:id="@+id/armsBrokenBoneButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_row="5"
            android:gravity="center"
            tools:layout_editor_absoluteX="186dp"
            tools:layout_editor_absoluteY="0dp" />

        <RadioButton
            android:id="@+id/legsBruisesButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="4"
            android:layout_row="1"
            android:gravity="center" />

        <RadioButton
            android:id="@+id/legsCutScrapesButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="4"
            android:layout_row="2"
            android:gravity="center" />

        <RadioButton
            android:id="@+id/legsSprainButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="4"
            android:layout_row="3"
            android:gravity="center"
            tools:layout_editor_absoluteX="186dp"
            tools:layout_editor_absoluteY="0dp" />

        <RadioButton
            android:id="@+id/legsDislocationButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="4"
            android:layout_row="4"
            android:gravity="center" />

        <RadioButton
            android:id="@+id/legsBrokenBoneButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="4"
            android:layout_row="5"
            android:gravity="center" />


    </GridLayout>

    <Button
        android:id="@+id/selectButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="Select"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout"
        android:background="@drawable/basic_button"/>

</android.support.constraint.ConstraintLayout>